<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @product.image.url(:medium) %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Code:</strong>
  <%= @product.code %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>
<p>
  <strong>Brand</strong>
  <% if @product.brand %>
   <%= @product.brand.name %>
   <%else%> 
   <h4>No hay marca registrada</h4>
 <% end %>
</p>

  <strong>Categorias:</strong>
  <% if @product.categories.empty? %>
    No hay categorias asignadas.
  <% else %>
    <ul>
    <% for category in @product.categories %>
      <li><%= category.name %></li>
    <% end %>
    </ul>
  <% end %>
</p>

<%= link_to 'Edit',  edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
